{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "jsx": "react",
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "module/*": ["../src/*"],
      "src/*": ["../src/*"]
    },
    "typeRoots": ["../types", "../node_modules/@types"]
  }
}
